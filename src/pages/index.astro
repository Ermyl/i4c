---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <!-- ================= MAIN PANELS ================= -->
  <section class="max-w-7xl mx-auto px-6">
    <div class="grid md:grid-cols-2">

      <!-- Development -->
      <a href="/development/" class="relative group aspect-[1/1] overflow-hidden">
        <img src="/development.jpg" alt="Development" class="absolute inset-0 w-full h-full object-cover" />
        <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/20 to-transparent"></div>
        <div class="absolute top-6 left-6 md:top-10 md:left-10">
          <h2 class="text-white text-2xl md:text-3xl font-bold tracking-wide">Development</h2>
        </div>
      </a>

      <!-- Architecture -->
      <a href="/architecture/" class="relative group aspect-[1/1] overflow-hidden">
        <img src="/architecture.jpg" alt="Architecture" class="absolute inset-0 w-full h-full object-cover" />
        <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/20 to-transparent"></div>
        <div class="absolute top-6 left-6 md:top-10 md:left-10">
          <h2 class="text-white text-2xl md:text-3xl font-bold tracking-wide">Architecture</h2>
        </div>
      </a>

    </div>
  </section>
</BaseLayout>
