---
import BaseLayout from "../../layouts/BaseLayout.astro";
---

<BaseLayout>

 <!-- ================= MAIN PANELS ================= -->
  <section class="max-w-7xl mx-auto px-6">
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3">

      <!-- New Build -->
      <a
        href="/architecture/new-build/"
        class="relative group w-full aspect-square md:aspect-[1/1] overflow-hidden block"
      >
        <img src="/architecture.jpg" alt="New Build" class="absolute inset-0 w-full h-full object-cover" />
        <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/20 to-transparent"></div>
        <div class="absolute top-6 left-6">
          <h2 class="text-white text-2xl font-bold tracking-wide">New Build</h2>
        </div>
      </a>

      <!-- Renovation -->
<button type="button"
  class="relative group aspect-[1/1] overflow-hidden text-left"
  data-img="/ihaka.jpg"
  data-title="Horrbin Hodge House Extension"
>
  <img src="/ihaka.jpg" alt="Extension" class="absolute inset-0 w-full h-full object-cover" />
  <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/20 to-transparent"></div>
  <div class="absolute top-6 left-6 md:top-10 md:left-10">
    <h2 class="text-white text-2xl md:text-3xl font-bold tracking-wide">Renovation</h2>
  </div>

                 <!-- Town Houses -->
<button type="button"
  class="relative group aspect-[1/1] overflow-hidden text-left"
  data-img="/Stellin Street.jpg"
  data-title="Boyle Houses"
>
  <img src="/Stellin Street.jpg" alt="Town Houses" class="absolute inset-0 w-full h-full object-cover" />
  <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/20 to-transparent"></div>
  <div class="absolute top-6 left-6 md:top-10 md:left-10">
    <h2 class="text-white text-2xl md:text-3xl font-bold tracking-wide">Town Houses</h2>
  </div>

            <!-- Commercial / health -->
<button type="button"
  class="relative group aspect-[1/1] overflow-hidden text-left"
  data-img="/titoki.jpg"
  data-title="Titoki Health Centre"
>
  <img src="/titoki.jpg" alt="Commercial" class="absolute inset-0 w-full h-full object-cover" />
  <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/20 to-transparent"></div>
  <div class="absolute top-6 left-6 md:top-10 md:left-10">
    <h2 class="text-white text-2xl md:text-3xl font-bold tracking-wide">Commercial/Health</h2>
  </div>

      <!-- Apartments -->
<button type="button"
  class="relative group aspect-[1/1] overflow-hidden text-left"
  data-img="/kaituna.jpg"
  data-title="Spero Development"
>
  <img src="/kaituna.jpg" alt="Interior" class="absolute inset-0 w-full h-full object-cover" />
  <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/20 to-transparent"></div>
  <div class="absolute top-6 left-6 md:top-10 md:left-10">
    <h2 class="text-white text-2xl md:text-3xl font-bold tracking-wide">Apartments</h2>
  </div>

<!-- Interior -->
<button type="button"
  class="relative group aspect-[1/1] overflow-hidden text-left"
  data-img="/interior.jpg"
  data-title="Cuba Street Apartment"
>
  <img src="/interior.jpg" alt="Interior" class="absolute inset-0 w-full h-full object-cover" />
  <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/20 to-transparent"></div>
  <div class="absolute top-6 left-6 md:top-10 md:left-10">
    <h2 class="text-white text-2xl md:text-3xl font-bold tracking-wide">Interior</h2>
  </div>
</button>

    </div>
  </section>



</BaseLayout>