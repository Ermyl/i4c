---
import BaseLayout from "../../layouts/BaseLayout.astro";
---

<BaseLayout>

 <!-- ================= MAIN PANELS ================= -->
  <section class="max-w-7xl mx-auto px-6">
    <div class="grid md:grid-cols-3">

      <!-- Infill -->
      <a href="/development/infill/" class="relative group aspect-[1/1] overflow-hidden">
        <img src="/infill.jpg" alt="infill" class="absolute inset-0 w-full h-full object-cover" />
        <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/20 to-transparent"></div>
        <div class="absolute top-6 left-6 md:top-10 md:left-10">
          <h2 class="text-white text-2xl md:text-3xl font-bold tracking-wide">Infill</h2>
        </div>
      </a>

      <!-- Land Development -->
      <a href="/development/land development/" class="relative group aspect-[1/1] overflow-hidden">
        <img src="/land development.jpg" alt="Land Development" class="absolute inset-0 w-full h-full object-cover" />
        <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/20 to-transparent"></div>
        <div class="absolute top-6 left-6 md:top-10 md:left-10">
          <h2 class="text-white text-2xl md:text-3xl font-bold tracking-wide">Land Development</h2>
        </div>
      </a>

     <!-- Commercial Development -->
      <a href="/development/commercial development/" class="relative group aspect-[1/1] overflow-hidden">
        <img src="/commercial development.jpg" alt="Commercial Development" class="absolute inset-0 w-full h-full object-cover" />
        <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/20 to-transparent"></div>
        <div class="absolute top-6 left-6 md:top-10 md:left-10">
          <h2 class="text-white text-2xl md:text-3xl font-bold tracking-wide">Commercial Development</h2>
        </div>
      </a>


    </div>
  </section>

</BaseLayout>